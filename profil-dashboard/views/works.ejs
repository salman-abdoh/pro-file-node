      <div class="container course col-9 mt-4">
        <h1 class="headerh text-center text-dark mb-3 ">الاعمال </h1>
        <hr>
        <div class="table-responsive  text-light  " style="direction: rtl;">

        </div>
        <div class=" row row-cols-1 row-cols-sm-12 row-cols-md-1 row-cols-lg-12 g-4 py-5" style="direction: rtl;">

         

            <div class="album py-5 bg-light">
                <div class="container">
            
                  <div class="row row-cols-12 row-cols-sm-1 row-cols-md-2 row-cols-lg-3  row-col-xl-2 g-3">
                  
                   
                    <% for( let index=0; index < works.length; index++ ) { %>
                    <div class="col">
                       
                      <div class="card shadow-sm ">
                        <img height="250px" width="100%" src="/images1/<%= works[index].image %>">
            
                        <div class="card-body">
                          <h3 class="card-text"><%= works[index].name %></h3>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn">
                                <a href="#" class="btn btn-success" data-bs-toggle="modal"
                                data-bs-target="#editModal<%=works[index]._id%>"><i class="fa fa-edit"></i> تعديل</a>
                            <a href="#" class="btn btn-danger confirm" data-bs-toggle="modal"
                            data-bs-target="#modalChoice"> <i
                                    class="fa fa-close"></i> حذف</a>
                            </div>
                            
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal fade mt-0" tabindex="-1" role="dialog" id="modalChoice">
                        <div class="modal-dialog" role="document" style="margin-top: 15%;">
                            <div class="modal-content rounded-4 shadow m-50">
                                <div class="modal-body p-4 text-dark text-center">
                                    <h5 class="mb-0"> هل انت متاكد<br>من عملية الحذف؟</h5>
                                    <p class="mb-0"> .</p>
                                </div>
                                <div class="modal-footer flex-nowrap p-0">
                                   
                                        <a href="/works/delete/<%=works[index]._id%>" class="btn bg-danger btn-lg btn-link btn-outline-primary text-dark fs-6 text-decoration-none col-6 m-0 rounded-0 border"> <i
                                            class="fa fa-close"></i> حذف</a>
                                    <button type="button"
                                        class="btn btn-lg btn-link btn-outline-primary text-dark fs-6 text-decoration-none col-6 m-0 rounded-0 border"
                                        data-bs-dismiss="modal">لا ,تراجع</button>
                                </div>
                            </div>
                        </div>
                    </div>
             <!-- Model Edit-->
             <div class="modal fade" id="editModal<%=works[index]._id%>" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog " style="direction: rtl;">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      <h5 class="modal-title text-center" id="staticBackdropLabel" style="width: 100%;">تعديل </h5>
  
                    </div>
                    <div class="container">
                      <form action="/update/works" method="post" enctype="multipart/form-data">
                        <input type="text" name="id" value="<%=works[index]._id%>">
                        <div class="row g-3">
                          <div class="col-12">
                              <label for="username" class="form-label">اسم العمل</label>
                              <div class="input-group has-validation">
    
                                <input type="text" class="form-control" name="name" value="<%=works[index].name%>" id="corsname" placeholder=" اسم الخبره " required="">
                                <div class="invalid-feedback">
                                  اسم العمل  .
                                </div>
                              </div>
                            </div>
  
                          <div class="col-12">
                            <label for="username" class="form-label">الصوره </label>
                            <div class="input-group has-validation">
  
                              <input type="file" class="form-control" name="image" id="corsname"  value="images1/<%=works[index].image%>" placeholder="  lfjv ">
                              <div class="invalid-feedback">
                                اسم العمل  .
                              </div>
                            </div>
                          </div>
  
                          <div class="col-12">
                            <label for="email" class="form-label"> الوصف </label>
                            <input type="text" class="form-control" id="descr" name="descr" value="<%=works[index].descr%>" placeholder="التقدير ">
                            <div class="invalid-feedback">
                              يرجى وصف لعملك   .
                            </div>
                          </div>
  
                          <div class="modal-footer">
                            <button type="submit " class="btn btn-success">تعديل</button>
                          </div>
                        </div>
                      </form>
  
                    </div>
                  </div>
                </div>
  
               
              </div>
              <% } %>
            </div>
          
          </div>
        
        </div>
                    
                   
                    
                  </div>
                  <a href="#" class="btn btn-sm btn-primary" style="float: left;" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa fa-plus"></i> اضافة عمل </a>
                </div>
              </div>
             
           
    

      
    <!-- Model Add -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" style="direction: rtl;">
        <div class="modal-content">
          <div class="modal-header text-center" col-12>
            <h5 class="modal-title text-center" id="exampleModalLabel" style="width: 100%;;">اضافة عمل
            </h5>

          </div>
          <div class="container">
            <form action="/works/add" method="post" enctype="multipart/form-data">
              <div class="row g-3">


                <div class="col-12">
                  <label for="username" class="form-label">اسم العمل</label>
                  <div class="input-group has-validation">

                    <input type="text" class="form-control" name="name" id="corsname" placeholder=" العمل" required="">
                    <div class="invalid-feedback">
                      اسم العمل  .
                    </div>
                  </div>
                </div>

                <div class="col-12">
                  <label for="file" class="form-label"> الصوره </label>
                  <input type="file" class="form-control" name="image" id="file" placeholder="الصوره">
                  <div class="invalid-feedback">
                    يرجى ارفاق  صوره .
                  </div>
                </div>
                
                <div class="col-12">
                    <label for="descr" class="form-label"> ملاحظات </label>
                    <input type="text" class="form-control" name="descr" id="descr" placeholder="ملاحضات">
                    <div class="invalid-feedback">
                      يرجى إدخال ملاحظات  .
                    </div>
                  </div>





                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i>اضافة</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Model Edit-->

    
    </div>
